<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context=".RegisterationDetails6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="200dp"
            >

            <ImageView
                android:id="@+id/backbutton6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/backarrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintVertical_bias="0.05"

                />
            <TextView
                android:id="@+id/textView680"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reference"
                android:fontFamily="@string/fontfamily"
                android:textColor="@color/black"
                android:textSize="18sp"

                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="30dp"
                app:layout_constraintHorizontal_bias="0.22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="18sp"
                android:fontFamily="@string/fontfamily"
                android:textColor="@color/black"
                android:layout_marginTop="-30dp"
                app:layout_constraintTop_toTopOf="@+id/height"
                app:layout_constraintStart_toStartOf="@+id/height"
                />
            <EditText
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-100dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:fontFamily="@string/fontfamily"
                android:hint="Height"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@id/textView680"
                app:layout_constraintStart_toStartOf="@id/textView680"
                app:layout_constraintVertical_bias="0.2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zodiac Sign"
                android:textSize="18sp"
                android:fontFamily="@string/fontfamily"
                android:textColor="@color/black"
                android:layout_marginTop="-30dp"
                app:layout_constraintTop_toTopOf="@+id/zodiac"
                app:layout_constraintStart_toStartOf="@+id/zodiac"
                />
            <Spinner
                android:id="@+id/zodiac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@id/height"
                android:layout_marginBottom="-100dp"

                app:layout_constraintStart_toStartOf="@id/height"
                app:layout_constraintVertical_bias="0.33"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textSize="18sp"
                android:fontFamily="@string/fontfamily"
                android:textColor="@color/black"
                android:layout_marginTop="-30dp"
                app:layout_constraintTop_toTopOf="@+id/education"
                app:layout_constraintStart_toStartOf="@+id/education"
                />
            <Spinner
                android:id="@+id/education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@id/zodiac"
                android:layout_marginBottom="-100dp"
                app:layout_constraintStart_toStartOf="@id/zodiac"
                app:layout_constraintVertical_bias="0.48"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drinking"
                android:textSize="18sp"
                android:fontFamily="@string/fontfamily"
                android:textColor="@color/black"
                android:layout_marginTop="-30dp"
                app:layout_constraintTop_toTopOf="@+id/drinking"
                app:layout_constraintStart_toStartOf="@+id/drinking"
                />
            <Spinner
                android:id="@+id/drinking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@id/education"
                android:layout_marginBottom="-100dp"
                app:layout_constraintStart_toStartOf="@id/education"
                app:layout_constraintVertical_bias="0.63"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet"
                android:textSize="18sp"
                android:fontFamily="@string/fontfamily"
                android:textColor="@color/black"
                android:layout_marginTop="-30dp"
                app:layout_constraintTop_toTopOf="@+id/pet"
                app:layout_constraintStart_toStartOf="@+id/pet"
                />
            <Spinner
                android:id="@+id/pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@id/drinking"
                android:layout_marginBottom="-100dp"
                app:layout_constraintStart_toStartOf="@id/drinking"
                app:layout_constraintVertical_bias="0.78"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Religion"
                android:textSize="18sp"
                android:fontFamily="@string/fontfamily"
                android:textColor="@color/black"
                android:layout_marginTop="-30dp"
                app:layout_constraintTop_toTopOf="@+id/religion"
                app:layout_constraintStart_toStartOf="@+id/religion"
                />
            <Spinner
                android:id="@+id/religion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@id/pet"
                android:layout_marginBottom="-100dp"
                app:layout_constraintStart_toStartOf="@id/pet"
                app:layout_constraintVertical_bias="0.92"
                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/NEXT6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Continue"
                android:backgroundTint="#E15454"
                app:cornerRadius="24dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/religion"
                android:layout_marginBottom="-100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Continue"
                android:backgroundTint="#E15454"
                app:cornerRadius="24dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/NEXT6"
                android:layout_marginBottom="-100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>